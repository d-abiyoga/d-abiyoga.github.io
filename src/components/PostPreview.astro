---
import { getMonthName } from "../utils";
import slugify from "../utils/slugify";

const { frontmatter: post } = Astro.props.post;
let publishedAt = new Date(post.published_at);
let date = publishedAt.getDate();
let month = getMonthName(publishedAt);
let year = publishedAt.getFullYear();

let url = "blog/" + slugify(post.title);
---

<li class="post-preview border-0 flex px-3 py-2 hover:cursor-pointer hover:scale-[1.02]">
  <!-- <a class="link-box" href={url}> -->
  <a class="link-box" href={url}>
    <div>
      <time class="post-preview__date text-sm">{date} {month} {year}</time>
      <h4 class="post-preview__title text-xl font-semibold underline mb-2">
        {post.title}
      </h4>
      <p class="post-preview__desc text-base leading-6">
    
        {post.description}
      </p>
    </div>
  </a>
</li>
<style>
  .post-preview {
    transition: 0.2s ease-in-out;
  }

  .post-preview:hover {
    background-color: var(--bg-color-accent);
  }

  .link-box {
    display: block;
    z-index: 1;
    width: 100%;
    height: 100%;
  }
  .post-preview__title {
    color: var(--title-color)
  }

  .post-preview__desc {
    color: var(--text-color)
  }

</style>
