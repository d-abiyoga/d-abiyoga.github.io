---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import slugify from "@utils/slugify";

// Use Astro.glob() to fetch all posts, and then sort them by date.
const posts = (await Astro.glob("/content/blog/*.{md,mdx}")).sort(
  (a, b) =>
    new Date(b.frontmatter.published_at).valueOf() -
    new Date(a.frontmatter.published_at).valueOf()
);
---

<Layout>
    <Header />
    <main>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li>
                <time class="italic" datetime={post.frontmatter.published_at}>
                  {new Date(post.frontmatter.published_at).toLocaleDateString(
                    "en-us",
                    {
                      year: "numeric",
                      month: "short",
                      day: "numeric",
                    }
                  )}
                </time>
                <a href={`/blog/${slugify(post.frontmatter.title)}`}>
                  {post.frontmatter.title}
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
</Layout>

<style>
ul {
  list-style-type: none;
  padding: unset;
}
ul li {
  display: flex;
}
ul li time {
  flex: 0 0 130px;
}

ul li a {
  /* color: var(--text-color); */
  text-decoration: underline;
}

ul li a:hover {
  color: var(--accent-color);
}

ul li a:visited {
}
</style>
